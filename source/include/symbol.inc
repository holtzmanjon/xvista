C       DEFINE SYMBOL TABLE DATA ARRAYS
C                       NUMBER OF SYMBOLS
	INTEGER         NSYMS
	PARAMETER       (NSYMS=5000)

C     THE SYMBOLS
	CHARACTER*8     SYMBOLS(NSYMS)
C     FOR HOLDING VALUES OF CHARACTER SYMBOLS
	CHARACTER*4000  SYMTXT
C     TYPE OF SYMBOL (NUMERIC OR CHARACTER)
	INTEGER*2       SYMTYPE(NSYMS)
C     POINTERS FOR CHARACTER SYMBOLS
	INTEGER*4       SYMTP(2,NSYMS)
C     VALUES FOR NUMERIC SYMBOLS
	REAL*8          SYMVAL(NSYMS)
	EQUIVALENCE (SYMVAL(1),SYMTP(1,1))

C     NEXT OPEN SPOT IN SYMTXT
	INTEGER         SYMPTR
C     NUMBER OF SYMBOLS
	INTEGER         SYMNUM

C     A SINGLE CHARACTER SYMBOL VALUE
	CHARACTER*100   SYMEXTRACT
C     NUMBER OF CHARACTERS IN SYMEXTRACT
	INTEGER         SYMSIZE

	COMMON/SYMBOLVALS/SYMTYPE,SYMVAL,SYMPTR,SYMNUM,SYMSIZE
	COMMON/SYMBOLTEXT/SYMBOLS,SYMTXT,SYMEXTRACT

C       DEFINE SYMBOL TYPES

	INTEGER SYMUNDEF,SYMNUMB,SYMCHAR,SYMFUN

	PARAMETER (SYMUNDEF=0)
	PARAMETER (SYMNUMB=1)
	PARAMETER (SYMCHAR=2)
	PARAMETER (SYMFUN=3)

